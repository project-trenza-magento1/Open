                            <label>Referral Link</label>
                            <frontend_type>text</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[<span id="referral-url" style="white-space: nowrap;"></span>
                                <script type="text/javascript">
                                    function changeReferralUrl()
                                    {
                                        var e   = document.getElementById('referral-url');
                                        var input   = document.getElementById('invitations_invitee_referral_link');
                                        
                                        var v   = getPath(input);
                                        
                                        var bUrl = BLANK_URL.substring(0, BLANK_URL.indexOf('/js/blank.html'));
                                        //alert(bUrl);
                                        if (!v || v == '/')
                                            v = '/invitations/index/accept/';
                                        
                                        if (v[v.length - 1] != '/')
                                            v += '/';
                                        
                                        v = v.toLowerCase();
                                        
                                        e.innerHTML = bUrl+v+'{id}';

                                    };
                                    
                                    function getPath(e)
                                    {
                                        var p = e.value;
                                        var np = '';
                                        var success = true;
                                        for(i = 0; i < p.length; i++)
                                        {
                                            if (p[i].match(/^[a-zA-Z]/) || p[i].match(/^[0-9]/) || p[i] == '/' || p[i] == '-' || p[i] == '_'   ) 
                                                np += p[i];
                                            else
                                                success = false;
                                        }
                                        
                                        if (np.length && np[0] != '/')
                                        {
                                            np = '/' + p;
                                            success = false;
                                        }

                                            
                                        if (!success)
                                            e.value = np;
                                        
                                        return np;
                                    }
                                    
                                    changeReferralUrl();
                                    document.getElementById('invitations_invitee_referral_link').onkeyup = changeReferralUrl;
                                
                                </script>]]></comment>  
                        </referral_link>
