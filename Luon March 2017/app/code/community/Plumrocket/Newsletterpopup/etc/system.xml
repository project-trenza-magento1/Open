<?xml version="1.0"?>
<config>
	<tabs>
        <plumrocket>
            <label>
            	<![CDATA[<div style="padding-left:22px; background: url(data:image/png;base64,) left 50% no-repeat;">Plumrocket Inc.</div>]]> 
            </label>
            <sort_order>101</sort_order>
        </plumrocket>
    </tabs>
	
	<sections>
		<newsletterpopup translate="label" module="newsletterpopup">
            <label>Newsletter Popup</label>
            <tab>plumrocket</tab>
            <sort_order>2110</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
				<general translate="label">
					<label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                    	<version translate="label">
		                    <frontend_type>text</frontend_type>
		                    <frontend_model>newsletterpopup/system_config_version</frontend_model>
		                    <sort_order>10</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
		                </version>
						<enable translate="label">
                            <label>Enable Extension</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <serial translate="label">
                            <label>Serial Key</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>plumbase/system_config_form_field</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[
                                Your can find <strong>Serial Key</strong> in your account at <a target="_blank" href="https://store.plumrocket.com/downloadable/customer/products/">store.plumrocket.com</a>. For manual <a target="_blank" href="http://wiki.plumrocket.com/wiki/License_Installation">click here</a>.
                            ]]>
                            </comment>
                        </serial>
                        <enable_analytics translate="label">
                            <label>Use Google Analytics Tracking</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Add auto-generated Google Analytics Event Tracking code on popup form buttons</comment>
                        </enable_analytics>
                        <enable_history translate="label">
                            <label>Enable Subscription History</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>If enabled, all user interactions with newsletter popup will be saved in magento database.</comment>
                        </enable_history>
                        <erase_history translate="label">
                            <label>Erase Old Subscription History</label>
                            <frontend_type>select</frontend_type>
                            <source_model>newsletterpopup/values_erase</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </erase_history>
                        <ip_skip translate="label">
                            <label>Disable History for IP-addresses</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>65</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </ip_skip>
                        <cookies_usage translate="label">
                            <label>Cookie Timeout Usage</label>
                            <frontend_type>select</frontend_type>
                            <source_model>newsletterpopup/values_cookies</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Separate cookie for each popup allows you to record time when popup was closed for each popup independently. When 2 or more popups are enabled at the same time, the user will see 2nd popup after the page refresh even if the 1st popup was just closed.</comment>
                        </cookies_usage>
                        <htmltoimage translate="label">
                            <label>Newsletter Popup Thumbnail</label>
                            <frontend_type>label</frontend_type>
                            <frontend_model>newsletterpopup/system_config_htmltoimage</frontend_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </htmltoimage>
					</fields>
				</general>
                <mailchimp translate="label">
                    <label>Mailchimp Synchronization</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable Synchronization</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>If enabled, collected emails will be transferred to your Mailchimp List(s)</comment>
                        </enable>
                        <key translate="label">
                            <label>Mailchimp API Key</label>
                            <frontend_type>obscure</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>You can find API key in your Mailchimp account.</comment>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                        </key>
                        <list translate="label">
                            <label>Mailchimp Lists</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>newsletterpopup/values_mailchimplist</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_model>newsletterpopup/system_config_list</frontend_model>
                            <can_be_empty/>
                            <comment>You will be able to enable mailchimp lists in each newsletter popup individually</comment>
                        </list>
                        <send_email translate="label">
                            <label>Double opt-in</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty/>
                            <comment><![CDATA[<strong>Important:</strong> Should be set to <strong>Yes</strong>. Abusing this may cause your account to be suspended.<br><a href="http://kb.mailchimp.com/article/how-does-confirmed-optin-or-double-optin-work/" target="_blank">How does double opt-in work?</a>

                            <script type="text/javascript">
                                    $$('#newsletterpopup_mailchimp_list option').each(function(el) { el.setAttribute('style', 'text-shadow: none!important'); });
                                    if($('newsletterpopup_mailchimp_list_inherit')) {
                                        $('newsletterpopup_mailchimp_list_inherit').onclick = function() {
                                            return false;
                                        }
                                    }
                                </script>
                            ]]></comment>
                        </send_email>
                        <info translate="label">
                            <label>Account Details</label>
                            <frontend_type>label</frontend_type>
                            <frontend_model>newsletterpopup/system_config_info</frontend_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </info>
                        <fields_tag translate="label">
                            <label>Mailchimp Fields Mapping</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>newsletterpopup/system_config_fieldsTag</frontend_model>
                            <backend_model>newsletterpopup/backend_fieldsTag</backend_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </fields_tag>
                    </fields>
                </mailchimp>
                <size translate="label">
                    <label>Device Screen Sizes</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <desktop translate="label">
                            <label>Desktop</label>
                            <frontend_type>time</frontend_type>
                            <frontend_model>newsletterpopup/system_config_size</frontend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Width of Desktop screen in pixels. Used to recognize device type to display newsletter popup. Default value is: "equals or greater than 992 px".</comment>
                        </desktop>
                        <tablet translate="label">
                            <label>Tablet</label>
                            <frontend_type>time</frontend_type>
                            <frontend_model>newsletterpopup/system_config_size</frontend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Width of Tablet screen in pixels. Default value is: "equals or greater than 768 px".</comment>
                        </tablet>
                        <mobile translate="label">
                            <label>Mobile</label>
                            <frontend_type>time</frontend_type>
                            <frontend_model>newsletterpopup/system_config_size</frontend_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Width of Mobile screen in pixels. Default value is: "less than 768 px".</comment>
                        </mobile>
                    </fields>
                </size>
                <disposable_emails translate="label">
                    <label>Disposable Emails</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>40</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <disable translate="label">
                            <label>Reject Subscriptions from Disposable Email Addresses</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </disable>
                        <domains translate="label">
                            <label>Disposable Email Services</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends><disable>1</disable></depends>
                            <comment>Black listed domain names. Newsletter subscriptions will be rejected for the email addresses from the above domains.</comment>
                        </domains>
                    </fields>
                </disposable_emails>
            </groups>
        </newsletterpopup>
    </sections>
</config>
